{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    // Supabase MCP Server - Remote
    "supabase": {
      "type": "remote",
      "url": "https://mcp.supabase.com/mcp?project_ref=onwwkhxrtcnzpmmrprro",
      "enabled": true
    },
    
    // Shadcn MCP Server - Local
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    }
  },
  
  // Quản lý tools từ MCP servers
  "tools": {
    // Enable tất cả tools từ supabase
    "supabase_*": true,
    
    // Chỉ enable các tools cụ thể từ shadcn (tương tự includeTools trong Amp)
    "shadcn_search_items_in_registries": true,
    "shadcn_view_items_in_registries": true,
    "shadcn_get_item_examples_from_registries": true,
    "shadcn_get_add_command_for_items": true,
    "shadcn_get_audit_checklist": true,
    
    // Disable các tools khác của shadcn (nếu có)
    "shadcn_*": false
  }
}
