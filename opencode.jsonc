{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    // Supabase MCP Server - Remote
    "supabase": {
      "type": "remote",
      "url": "https://mcp.supabase.com/mcp?project_ref=onwwkhxrtcnzpmmrprro",
      "enabled": true
    },
    
    // Shadcn MCP Server - Local
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    },
    
    // Docker MCP Gateway - Local
    "mcp_docker": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": true
    },
    
    // GKG (Git Knowledge Graph) - Local HTTP Server
    "gkg": {
      "type": "remote",
      "url": "http://localhost:27495/mcp",
      "enabled": true
    },
    
    // MCP Agent Mail - Local HTTP Server
    "mcp_agent_mail": {
      "type": "remote",
      "url": "http://127.0.0.1:8765/mcp/",
      "headers": {
        "Authorization": "Bearer 51872107e7d196c45d7e46bbd48bf370ca2191e4ebacd53224d9fc9acec27a3d"
      },
      "enabled": true
    }
  },
  
  // Quản lý tools từ MCP servers
  "tools": {
    // Enable tất cả tools từ supabase
    "supabase_*": true,
    
    // Enable tất cả tools từ shadcn
    "shadcn_*": true,
    
    // Enable tất cả tools từ mcp_docker
    "mcp_docker_*": true,
    
    // Enable tất cả tools từ gkg (Git Knowledge Graph)
    "gkg_*": true,
    
    // Enable tất cả tools từ mcp_agent_mail
    "mcp_agent_mail_*": true
  }
}
